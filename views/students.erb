<h1>Student Information System</h1>
<a href="/students/new">Create a new Student</a>
<% if @students.any?
 %><ul id="students">
<% @students.each do |student|
 %><li><a href="/students/<%= ::Temple::Utils.escape_html((student.id)) %>"><%= ::Temple::Utils.escape_html((student.sfname)) %> <%= ::Temple::Utils.escape_html((student.slname)) %> - <%= ::Temple::Utils.escape_html((student.major)) %> - <%= ::Temple::Utils.escape_html((student.gpa)) %></a></li>
<% end %></ul><% else
 %><p>No record have been created yet!</p>
<% end %>
